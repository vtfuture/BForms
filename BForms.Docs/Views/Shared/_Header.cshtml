@using BootstrapForms.Html
@using BootstrapForms.Models

@{
    var header = ViewBag.Header;
    var ctrl = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    var area = HttpContext.Current.Request.RequestContext.RouteData.DataTokens["area"];
}

<header>
    <div class="navbar">
	    <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand brand" href="@Url.Action("Index", "Home", new { area = "" })"><img src="@Url.Content("~/Content/images/logo-bforms.png")"></a>
	    </div>

        <div class="collapse navbar-collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav pull-right">
                <li class="dropdown @(ctrl.Contains("Components") ? "active" : "")">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Components</a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Overview", "Components", new { area = "" })">Overview</a></li>
                        <li><a href="@Url.Action("InputExtensions", "Components", new { area = "" })">Input controls</a></li>
                        <li><a href="@Url.Action("SelectExtensions", "Components", new { area = "" })">Select controls</a></li>
                        <li><a href="@Url.Action("RangeExtensions", "Components", new { area = "" })">Range controls</a></li>
                        <li><a href="@Url.Action("Grid", "Components", new { area = "" })">Grid control</a></li>
                    </ul>
                </li>
                <li class="dropdown @((area != null && area.ToString().Contains("Demo")) ? "active" : "")">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Examples</a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Index", "Login", new { area = "Demo", mode = "login" })">Login form<span class="badge badge-info">post-back</span></a></li>
                        <li><a href="@Url.Action("Index", "Login", new { area = "Demo", mode = "register" })">Register form<span class="badge badge-info">ajax</span></a></li>
                        <li><a href="@Url.Action("Index", "Grid", new { area = "Demo" })">Grid</a></li>
                    </ul>
                </li>
            </ul>
        </div>

    </div>
</header>