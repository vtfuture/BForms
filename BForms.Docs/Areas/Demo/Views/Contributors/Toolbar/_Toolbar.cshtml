@model BForms.Docs.Areas.Demo.Models.ContributorsViewModel
@using BForms.Docs.Helpers
@using BForms.Docs.Resources
@using BForms.Grid
@using BForms.Html
@using BForms.Models

@(Html.BsToolbarFor(x => x.Toolbar)
    .DisplayName("Dev Team")
    .Theme(Html.GetTheme())
    .ConfigureActions(ca =>
    {

        var group1 = ca.AddButtonGroup().DisplayName("Options");

        group1.Add(BsToolbarActionType.Add)
            .Text(Resource.Add)
            .Tab(x => Html.BsPartialPrefixed(y => y.New, "Toolbar/_New", x));

        group1.AddActionLink()
            .Text(Resource.Add)
            .Action(Url.Action("Index", "Home", new { area = "" }));

        group1.AddSeperator();
        

        ca.AddButtonGroup().DisplayName("Options2");    
            
    ca.Add(BsToolbarActionType.Add)
            .Text(Resource.Add)
            .Tab(x => Html.BsPartialPrefixed(y => y.New, "Toolbar/_New", x));
        
        ca.Add<BsToolbarQuickSearch>()
          .Placeholder(Resource.Search);
        
        ca.Add(BsToolbarActionType.AdvancedSearch)
          .Tab(x => Html.BsPartialPrefixed(y => y.Search, "Toolbar/_Search", x));
    })
)
